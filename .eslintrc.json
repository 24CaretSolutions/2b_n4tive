{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react"],
  "rules": {
    "import/no-unresolved": [2, { "ignore": ["~"] }],
    "import/extensions": { "js": "never" },
    "react/jsx-filename-extension": "off"
  }
}
